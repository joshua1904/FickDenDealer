<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sechs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="6(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/sieben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="7(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/acht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="8(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/neun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="9(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/zehn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="10(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/unter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/u_4"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/ober"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="O(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/koenig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="K(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />

            <Button
                android:id="@+id/ass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="A(4)"
                android:textColor="#000000"
                android:textSize="13sp"
                app:backgroundTint="#D1CFCF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ersteWahl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DrueberWahll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DrunterWahl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Treffer Wahrscheinlichkeit:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/DurschschnittsW"
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#000000"
            android:textSize="50sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>